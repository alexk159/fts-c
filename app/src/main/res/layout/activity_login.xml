<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <EditText
        android:id="@+id/tb_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tb_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/tb_login"
        app:layout_constraintTop_toBottomOf="@+id/tb_login" />

    <TextView
        android:id="@+id/l_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_l_login"
        app:layout_constraintBottom_toTopOf="@+id/tb_login"
        app:layout_constraintEnd_toEndOf="@+id/tb_login"
        app:layout_constraintStart_toStartOf="@+id/tb_login" />

    <TextView
        android:id="@+id/l_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_l_pass"
        app:layout_constraintBottom_toTopOf="@+id/tb_pass"
        app:layout_constraintEnd_toEndOf="@+id/tb_pass"
        app:layout_constraintStart_toStartOf="@+id/tb_pass" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="@string/s_b_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_pass" />
</android.support.constraint.ConstraintLayout>